// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "../../inputData"

options
{
    energySource
    {
        type            scalarSemiImplicitSource;

        duration        $flowSimulationEndTime;
        selectionMode   all;

        volumeMode      specific;
        sources
        {
            h           ($maxVolumetricPowerDensity 0);  // kg/m/s^3
        }
    }
}


